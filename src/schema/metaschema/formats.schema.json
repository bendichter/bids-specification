{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for validating various entity patterns and metadata types with specific regular expressions",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9_]+$": {
      "type": "object",
      "properties": {
        "display_name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "pattern": {
          "type": "string"
        }
      },
      "required": ["display_name", "description", "pattern"]
    }
  },
  "additionalProperties": false
}