{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for validating modalities supported by BIDS",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z_][a-zA-Z0-9_]*$": {
      "type": "object",
      "properties": {
        "issue": {
          "type": "object",
          "properties": {
            "code": {"type": "string"},
            "message": {"type": "string"},
            "level": {"enum": ["error", "warning"]}
          },
          "required": ["code", "message", "level"],
          "additionalProperties": false
        },
        "selectors": {
          "type": "array",
          "item": {"type": "string"}
        },
        "checks": {
          "type": "array",
          "item": {"type": "string"}
        }
      },
      "required": ["selectors", "checks"]
    }
  }
}