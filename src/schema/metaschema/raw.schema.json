{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Schema for validating modalities supported by BIDS",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z_][a-zA-Z0-9_]*$": {
      "type": "object",
      "properties": {
        "suffixes": {"type": "array", "items": {"type": "string"}},
        "extensions": {"type": "array", "items": {"pattern": "^.[a-zA-Z_.*]*(/)?$"}},
        "entities": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_]*$": {
              "anyOf": [
                {"enum": ["required", "optional"]},
                {"type": "object"}
              ]

            }
          }
        },
        "datatypes": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "additionalProperties": false
  }
}